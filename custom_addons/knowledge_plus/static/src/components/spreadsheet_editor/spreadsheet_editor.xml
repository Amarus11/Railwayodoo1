<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="knowledge_plus.SpreadsheetEditor">
        <div class="o_spreadsheet_editor d-flex flex-column h-100 w-100">
            <div t-if="state.error" class="alert alert-warning m-3">
                <i class="fa fa-exclamation-triangle me-2"/>
                <t t-out="state.error"/>
            </div>
            <div t-ref="spreadsheetContainer" class="o_spreadsheet_container flex-grow-1 w-100"/>
        </div>
    </t>
</templates>
