<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="knowledge_plus.FormatSelectorDialog">
        <Dialog title="'Create new...'" size="'md'">
            <div class="o_format_selector d-flex flex-wrap gap-3 p-2">
                <t t-foreach="formats" t-as="fmt" t-key="fmt.type">
                    <div class="o_format_card card cursor-pointer flex-grow-1"
                         style="min-width: 200px; max-width: 48%;"
                         t-on-click="() => this.onFormatClick(fmt.type)">
                        <div class="card-body d-flex align-items-start gap-3 p-3">
                            <span class="o_format_emoji" style="font-size: 2em; line-height: 1;">
                                <t t-out="fmt.emoji"/>
                            </span>
                            <div class="flex-grow-1">
                                <h6 class="card-title mb-1 fw-bold">
                                    <t t-out="fmt.label"/>
                                </h6>
                                <p class="card-text text-muted small mb-0">
                                    <t t-out="fmt.description"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="props.close">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
