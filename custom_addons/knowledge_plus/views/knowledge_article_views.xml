<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the knowledge article form view to add format_type support -->
    <record id="knowledge_article_view_form_inherit" model="ir.ui.view">
        <field name="name">knowledge.article.view.form.inherit.knowledge_plus</field>
        <field name="model">knowledge.article</field>
        <field name="inherit_id" ref="knowledge.knowledge_article_view_form"/>
        <field name="arch" type="xml">
            <!-- Add format_type and format_data as hidden fields -->
            <xpath expr="//field[@name='full_width']" position="after">
                <field name="format_type" invisible="1"/>
                <field name="format_data" invisible="1"/>
            </xpath>

            <!-- Make the HTML body editor invisible for non-article formats -->
            <xpath expr="//div[hasclass('o_knowledge_editor')]" position="attributes">
                <attribute name="invisible">format_type != 'article'</attribute>
            </xpath>

            <!-- Add format editor placeholder after the standard body editor -->
            <xpath expr="//div[hasclass('o_knowledge_editor')]" position="after">
                <div class="o_knowledge_format_editor w-100 flex-grow-1"
                     invisible="format_type == 'article' or not id">
                    <widget name="knowledge_format_editor"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
